<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listings", skills_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Costumers", your_costumers_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Hirings", your_hirings_path, class: "sidebar-link" %></li>
		</ul>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Costumers
			</div>
			<div class="panel-body">
				        <% @skills.each do |skill| %>
			            <% skill.reservations.each do |reservation| %>
			                <div class="row">
			                  <div class="col-md-2">
			                    <%= reservation.start_date.strftime('%v') %>
			                    Total: $<%= reservation.total %>
			                  </div>
			                  <div class="col-md-2">
			                    <%= link_to skill_path(reservation.skill) do %>
			                        <%= image_tag reservation.skill.cover_photo(:thumb) %>
			                    <% end %>
			                  </div>
			                  <div class="col-md-5">
			                    <%= link_to reservation.skill.skill_name, skill_path(reservation.skill) %><br/><br/>
			                    <span>
			                      <%= link_to user_path(reservation.user) do %>
			                        <%= image_tag avatar_url(reservation.user), class: "img-circle avatar-small" %>
			                        <%= reservation.user.fullname %>
			                      <% end %>
			                    </span>
			                  </div>
				      			<div class="col-md-3 text-right">
								<%= render partial: "reviews/host_form", locals: {reservation: reservation} %>
								</div>
			                </div>
			                <hr/>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
